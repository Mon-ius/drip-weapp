<view class="page">
  <view class="page__hd">
  		<view class="weui-cells__title">目标名称</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <input class="weui-input" placeholder="例如：我要马甲线" />
                </view>
            </view>
        </view>

        <view class="weui-cells__title">目标描述</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" placeholder="请具体描述你的目标内容" style="height: 3.3em" />
                    <view class="weui-textarea-counter">0/200</view>
                </view>
        	</view>
        </view>

        <view class="weui-cells__title">其他设置</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_switch">
                <view class="weui-cell__bd">是否公开</view>
                <view class="weui-cell__ft">
                    <switch checked />
                </view>
            </view>
        </view>
  </view>

    <view class="page__bd page__bd_spacing">
    	<button class="weui-btn" type="primary">提交</button>

    </view>

</view>
